<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap
            android:src="@drawable/navbar_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            />
    </item>
    <item android:gravity="right|top"
        android:width="96dp"
        android:height="96dp"
        android:top="26dp"
        android:right="2dp">

        <rotate
            android:drawable="@drawable/ic_icon"
            android:fromDegrees="180"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"/>
    </item>
</layer-list>
