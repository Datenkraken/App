<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimaryLight"
                android:angle="45" />
            <size
                android:width="56dp"
                android:height="56dp" />
        </shape>
    </item>
    <item android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:drawable="@drawable/ic_public_24px"/>
</layer-list>
